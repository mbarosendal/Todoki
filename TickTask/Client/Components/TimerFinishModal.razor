@using TickTask.Client.Enums
@using TickTask.Shared

<BaseModal IsOpen="@IsOpen" 
		   IsOpenChanged="@IsOpenChanged" 
		   Title="Time for a break">

	@if (!string.IsNullOrEmpty(CountdownTimer.Text))
	{
		<div class="section">

			<h2>@($"{CountdownTimer.Text}")</h2>
		</div>
	}
</BaseModal>

@code {
	[Parameter] public bool IsOpen { get; set; }
	[Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

	[Parameter] public CountdownTimer CountdownTimer { get; set; } = default!;
}


<style>
	.modal-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background-color: rgba(0, 0, 0, 0.6);
		display: flex;
		justify-content: center;
		align-items: center;
		z-index: 1000;
		padding: 20px;
	}

	<!-- Prevent overflow -->
	h2 {
		word-wrap: break-word;
		overflow-wrap: break-word;
		max-width: 100%;
		white-space: normal;
	}

</style>